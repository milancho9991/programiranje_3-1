int[,] matrica ={{ 1, 2, 3 },{ 4, 5, 6 }};
for (int i = 0; i < 3; i++)
{
    for (int j = 0; j < 3; j++)
    {
        Console.Write(matrica[i, j] + "\t");
    }
    Console.WriteLine();
}


////////////////////
int zbirGlavne = 0;
for (int i = 0; i < 3; i++)
{
    zbirGlavne += matrica[i, i];
}
Console.WriteLine("Збир елемената главне дијагонале: " + zbirGlavne);

///////////////////
